<div class="fixed-action-btn click-to-toggle">
    <a class="btn-floating btn-large red">
        <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
        <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
        <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
        <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
        <li><a href="/enrolls/new" class="btn-floating blue"><i class="material-icons">add</i></a></li>
    </ul>
</div>
<div class="container">


    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="box">
            <div class="card z-depth-3 borde-radio-10">
                <div class="card-content black-text center-xs">
                    <span class="robotoB text-20 center primario-text">Matriculas</span>

                    <table class="highlight striped responsive-table">
                        <thead>
                            <tr>
                                <th class="primario-text">Identificacion</th>
                                <th class="primario-text">Nombre</th>
                                <th class="primario-text">Discipulado</th>
                                <th class="primario-text">Grupo</th>
                                <th class="primario-text">Estado</th>
                                <th class="primario-text">Fecha de inscripcion</th>
                                <th class="primario-text">Accion</th>


                            </tr>
                        </thead>

                        <tbody>
                            <% @enrolls.each do |enroll| %>

                                <tr>
                                    <td class="primario-text">
                                        <%=enroll.user.identificacion%>
                                    </td>
                                    <td class="primario-text">
                                        <%=enroll.user.nombre_completo%>
                                    </td>
                                    <td class="primario-text">
                                        <%=enroll.group.codigo%>
                                    </td>
                                    <td class="primario-text">
                                        <%=enroll.group.discipleship.nombre%>
                                    </td>
                                    <td class="primario-text">
                                        <%=enroll.definitiva%>
                                    </td>
                                    <td class="primario-text">
                                        <%=enroll.created_at%>
                                    </td>

                                    <td>
                                        <%= link_to 'Eliminar', enroll, method: :delete, data: { confirm: 'Esta seguro?' }, class: "rojoBri-text robotoB" %>
                                    </td>

                                </tr>
                                <%end%>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<br>
<script>
    $(document).ready(function() {
        $('.fixed-action-btn').floatingActionButton();
    });
</script>
