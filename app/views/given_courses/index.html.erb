<div class="container">


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" >
      <div class="box">
        <div class="card z-depth-3 borde-radio-10">
          <div class="card-content black-text center-xs" >
            <span class="card-title center" >Historial de cursos</span>
<table>
  <thead>
    <tr>
      <th>Idgrupo</th>
      <th>Fechainicio</th>
      <th>Fechacierre</th>
      <th>Discipleship</th>
      <th>Docente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @given_courses.each do |given_course| %>
      <tr>
        <td><%= given_course.idGrupo %></td>
        <td><%= given_course.fechaInicio %></td>
        <td><%= given_course.fechaCierre %></td>
        <td><%= given_course.discipleship.nombre %></td>
        <td><%= given_course.user.nombre_completo %></td>
        <td><%= link_to 'detalles', given_course %></td>
        <td><%= link_to 'Editar', edit_given_course_path(given_course) %></td>
        <td><%= link_to 'Eliminar', given_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
        </div>
      </div>
    </div>

</div>

<br>
<div class="fixed-action-btn click-to-toggle">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
    <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
    <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
    <li><a href="/given_courses/new" class="btn-floating blue"><i class="material-icons">add</i></a></li>
  </ul>
</div>
<script>
$(document).ready(function(){
    $('.fixed-action-btn').floatingActionButton();
  });

</script>


