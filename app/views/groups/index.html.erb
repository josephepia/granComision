<% if !@groups %>
  <h4>no hay grupos disponibles</h4>
<% end %>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Nombre</th>
      <th>Activo</th>
      <th>Discipleship</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.codigo %></td>
        <td><%= group.activo %></td>
        <td><%= group.discipleship.nombre %></td>

        <td><%= group.user.presence ? group.user.nombre_completo : "Sin docente asignado" %></td>
        <td><%= link_to 'Show', discipleship_groups_path(group.discipleship,group) %></td>
        <td><%= link_to 'Edit', group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
