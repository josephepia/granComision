<div>
    <div class="center-xs">
        <h4>Grupos</h4>
    </div>
    <br>
</div>
<div class="row center-xs">
    <% @groups.each do |grupo| %>
        <div class="col-xs-12
    col-sm-8
    col-md-6
    col-lg-4 ">
            <div class="box">
                <div class="card z-depth-3 borde-radio-10">
                    <div class="card-content black-text start-xs">
                        <span class="card-title center"><%=grupo.codigo%></span>
                        <b>Discipulado: </b>
                        <p>
                            <%=grupo.discipleship.nombre%>
                        </p>
                        <b>Estudiantes inscritos: </b>
                        <p>
                            <%=Enroll.where(group_id: grupo.id).count %>
                        </p>
                    </div>
                    <section class="verdeAdo white-text borde-radio-buton-10">
                        <div class="actions center ">
                            <%= link_to  "Ver detalles", group_path(grupo), class: "waves-effect waves-teal btn-flat white-text " %>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <%end%>
</div>