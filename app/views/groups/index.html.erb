<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Activo</th>
      <th>Discipleship</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discipleship.groups.each do |group| %>
      <tr>
        <td><%= group.nombre %></td>
        <td><%= group.activo %></td>
        <td><%= group.discipleship.nombre %></td>
        
        <td><%= group.presence ? group.user.nombre_completo : "Sin docente asignado" %></td>
        <td><%= link_to 'Show', discipleship_group_path(@discipleship,group) %></td>
        <td><%= link_to 'Edit', edit_discipleship_group_path(@discipleship,group) %></td>
        <td><%= link_to 'Destroy', [@discipleship,group], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_discipleship_group_path %>
