<div class="fixed-action-btn no-autoinit">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
    <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
    <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
    <li><a href="/discipleships/new" class="btn-floating blue"><i class="material-icons">add</i></a></li>
  </ul>
</div>

  <div class="container">
    <div class="row center-xs " >
      
        <div class="col-xs-12
                    col-sm-8
                    col-md-6
                    col-lg-4 ">
          <div class="box">
            <div class="card z-depth-2 borde-radio-10 hoverable"  >
              <div class="card-content black-text" >
                <span class="card-title center-xs">Regostrar soporte de pacto</span>
                	<%= form_with(model: support, local: true) do |f| %>
                <div class="row around-xs">
                    
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                    <div class="box">                               
                      <div class="input-field">
                        <i class="material-icons prefix">border_color</i>
                        <%= f.label :nombre , "Nombre"%>
                        <%= f.text_field :nombre, id: :discipleship_nombre %>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                    <div class="box">                               
                      <div class="input-field">
                        <i class="material-icons prefix">local_offer</i>
                        <%= f.label :rangoOtorgado ,"Rango otorgado"%>
                        <%= f.text_field :rangoOtorgado, id: :discipleship_rangoOtorgado %>
                      </div>
                    </div>
                  </div> 
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="box">                               
                      <div class="input-field">
                        <i class="material-icons prefix">assignment</i>
                        <%= f.label :descripcion %>
                        <%= f.text_area :descripcion, id: :discipleship_descripcion, class: "materialize-textarea" %>
                      </div>
                    </div>
                  </div> 
                  
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="box">                               
                      <div class="input-field">
                        <i class="material-icons prefix">assignment</i>
                        <%= f.label :descripcionPacto, "Descripcion del compromiso" %>
                        <%= f.text_area :descripcionPacto, id: :discipleship_descripcionPacto, class: "materialize-textarea" %>
                      </div>
                    </div>
                  </div>    
                  </div>
                  <div class="actions ">
                    
                    <%= f.submit "Aceptar",class: "btn  waves-light  borde-radio-5" %>
                    <br><br>
                    
                    
                    
                    </div>
                    <%end%>
                
                <div class="actions center">
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      
    </div>
  </div>   


